{
  "manifest_version": 2,
  "name": "VisibleEarthHomepage",
  "version": "1.0",
  "description": "Change homepage to the latest image from NASA VisibleEarth",
  "chrome_settings_overrides": {
    "homepage": "index.html"
  },
  "background": {
    "scripts": ["js/index.js"],
    "persistent": true
  },
  "permissions": [
    "webRequest",
    "https://visibleearth.nasa.gov/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "visible_earth_homepage@test.com"
    }
  }
}
